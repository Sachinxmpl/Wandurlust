<% layout("/layouts/boilerplate") -%>

<style>
  .filter {
    text-align: center;
    margin-top: 2rem;
    margin-right: 2rem;
    opacity: 0.65;
  }
  .filter p {
    font-size: 0.8rem;
  }
  #filters {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }
  .tax-info-display{
    display : none ;
  }
  .tax-toggle{
    border : 1px solid black ; 
    border-radius: 1rem ;
    height : 3rem ;
    padding :0.7rem 2rem 1rem 2rem ;
    margin-left : 5rem ;  
  }
</style>

<body>
  <!-- <form method="GET" action="/listings/new">
